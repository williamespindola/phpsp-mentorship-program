#!/usr/bin/php
<?php

include __DIR__ . "/../vendor/autoload.php";

use Todo\CreateTask;
use Todo\ViewTask;
use Todo\Task;

switch ($argv[1]) {
    case 'create':
        $pdo = new PDO('sqlite:todo.sqlite');
        $pdo->setAttribute(
            PDO::ATTR_ERRMODE, 
            PDO::ERRMODE_EXCEPTION
        );
        $due = new DateTime($argv[3]);
        $task = new Task($argv[2], $due, $argv[4], $argv[5]);
        $createTask = new CreateTask($pdo);
        $createTask->create($task);
        
        echo "Task created";

        break;

    default:
        echo "Invalid option." . PHP_EOL;
}